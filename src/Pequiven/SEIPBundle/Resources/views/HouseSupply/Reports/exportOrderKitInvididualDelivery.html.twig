{# empty Twig template #}
<style>
    table{
        border-collapse:separate;
        border-spacing: 4px;
    }

    .rounded{
        border-radius: 50px 50px 50px 50px;
        -moz-border-radius: 50px 50px 50px 50px;
        -webkit-border-radius: 50px 50px 50px 50px;
    }
    .white-gradient {
        background-color: #E6E6E6;             
        font-size: 8pt;
        font-weight: bold;                
    }       
    .white-gradient-th{
        background-color: #E6E6E6;                
        font-size: 10pt;
        font-weight: bold; 
        text-align: left;        
    }
    .observation{
        font-family: sans-serif;
        font-size: 8pt;
        color: #6E6E6E;
    }
    td{
        font-family: sans-serif;
        font-size: 8pt;  
    }
    .resultgreen{
        color: #04B404; 
        font-weight: bold;
    }
    .resultred{
        color: #FF0000;        
        font-weight: bold;
    }
    .redPenalty{        
        background-color: #F5A9A9;            
    }

    .tableBordered{
        padding: 2px;
        border: #000000 7px solid;
    }
    .header{
        text-align: left;
        font-weight: bold;
    }
    .text-center{
        text-align: center;
    }
    .text-right{
        text-align: right;
    }

</style>
{% block body %}   
    {%set idMember=0%}                                        
    {%for items in order.getOrderItems%}        
        {%if idMember!=items.getclient.getId%}
            {%set idMember=items.getclient.getId%}      
            {%set member=items.getclient %}      
            <table style="page-break-after: always;">
                <tr>
                    <td>
                        <table style="width: 100%;">   
                            <tr>
                                <td colspan="2" class="white-gradient-th">                                
                                    Datos del Despacho                                                          
                                </td>   
                                <td colspan="2" rowspan="3" style="background-color: #D8D8D8;">
                                    <br><br>
                                    <span  style="font-size: 18pt; vertical-align: middle; text-align: center;">Orden Nro.:
                                        <span class="resultgreen">{{ "%05d" | format(order.nroOrder) }}</span>    
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td width="15%" class="header">Fecha de Pedido:</td>
                                <td width="35%">
                                    {{ order.getDateOrder|date("d/m/Y h:i:s a") }} 
                                </td>              
                            </tr>
                            <tr>
                                <td width="15%" class="header">Miembro:</td>
                                <td width="35%">
                                    {{ member.getfullname }} 
                                </td>                    
                            </tr>
                            <tr>
                                <td width="15%" class="header">C.I.:</td>
                                <td width="35%">
                                    {{ member.getIdentification|number_format(0, ',', '.') }}
                                </td>
                                <td width="15%" class="header">Estatus:</td>
                                <td width="35%">
                                    {{arrayStatus[order.getType]}}
                                </td>             
                            </tr>
                            <tr>
                                <td width="15%" class="header">C.E.T.:</td>
                                <td width="35%">
                                    {{ order.getWorkStudyCircle.codigo }} 
                                </td>
                                <td width="15%" class="header">Fecha de Pago:</td>
                                <td width="35%">
                                    {%if ((order.getType==4) or (order.getType==5))%}                                
                                        {{ order.getDatePay|date("d/m/Y h:i:s a") }} 
                                    {%else%}
                                        Sin Pagar
                                    {%endif%}
                                </td>
                            </tr>
                            <tr>
                                <td width="15%" class="header">Coordinador:</td>
                                <td width="35%">
                                    {{ order.getWorkStudyCircle.getcoordinator.getfullname }} 
                                </td>
                                <td width="15%" class="header">Fecha de Entrega:</td>
                                <td width="35%">
                                    {%if order.getType==5%}
                                        {{ order.getDateDelivery|date("d/m/Y h:i:s a") }} 
                                    {%else%}
                                        Sin Retirar
                                    {%endif%}
                                </td>
                            </tr>
                        </table>        
                        <table>   
                            <tr>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td class="white-gradient-th">Productos</td>         
                            </tr>   
                            <tr>                                                    
                                <th class="white-gradient text-center" width="20%">Cant</th>
                                <th class="white-gradient" width="80%">Producto</th>                                                            
                            </tr>
                            {% set cafe = 0 %}
                            {% if (orderDetails) %}
                                {% for list in orderDetails %}       
                                    {#                                    {% if list['prodID']==6 %}
                                                                            {% set cafe = list['cant'] %}
                                                                        {%endif%}#}
                                    <tr>
                                        <td class="text-center" width="20%"> {{ list.cant/cantKits }} </td>
                                        <td width="80%">{{ list.product }}</td>                                                                  
                                    </tr>                                                                                                    
                                {% endfor %}   
                            {% endif %}       
                        </table>  
                        {# <br><br>                                                
                         - El Círculo posee para la Próxima Orden un Descuento de {{(cafe*240)|myNumberFormat}} Bs. motivado a la diferencia de Artículos Entregados.
                        #}
                        <br><br><br><br><br><br>
                        <table> 
                            <tr>
                                <td width="50%" style="text-align: center;">__________________________________</td>
                                <td width="50%" style="text-align: center;">__________________________________</td>
                            </tr>  
                            <tr>
                                <td width="50%" style="text-align: center;">Firma del Miembro</td>
                                <td width="50%" style="text-align: center;">Firma del Coordinador</td>
                            </tr>  
                            <tr>
                                <td width="50%" style="text-align: center;">{{member.getfullname}}</td>
                                <td width="50%" style="text-align: center;"> {{ order.getWorkStudyCircle.getcoordinator.getfullname }} </td>
                            </tr>  
                        </table>
                    </td>
                </tr>
            </table>   
        {%endif%}
    {%endfor%}
{% endblock %}

