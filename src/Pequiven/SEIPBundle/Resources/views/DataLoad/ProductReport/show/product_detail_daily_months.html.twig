{% trans_default_domain 'PequivenSEIPBundle' %}

{% import 'PequivenSEIPBundle:Template:Developer/Macros/buttons.html.twig' as buttons %}

{% set message = ("pequiven_seip.product_report.question.delete"|trans) %}

{% set unitFactor =  factorConversionService.unitToFactorConversion(product_report) %}

<div class="block">
    <div class="block-title">
        <h3> {{ 'pequiven_seip.product_report.product_detail_daily_months'|trans }}&nbsp;({{ product_report.productDetailDailyMonths|length }})</h3>
        <div class="button-group absolute-right compact">
            {% if isAllowPlanningReport %}
                <a class="button icon-list-add" href="{{ path("pequiven_product_detail_daily_month_create",{productReport:product_report.id}) }}">{{ 'pequiven.add'|trans({},'messages') }}</a>
            {% endif %}
        </div>
    </div>
    {% set typeProductionGross = "&nbsp;("~("pequiven_seip.gross"|trans)~")" %}
    {% set typeProductionNet = "&nbsp;("~("pequiven_seip.net"|trans)~")" %}
    {% set productUnit = product_report.product.productUnit %}

    <br>

    <div id="add-tabs"  class="standard-tabs margin-bottom tabs-active" style="height: 30px;">

        <ul class="tabs">
            <li class="active"><a href="#tab-1">{{ productUnit }}</a></li>
                {% if(factor) %}
                <li><a href="#tab-2">{{ unitFactor  }}</a></li>
                {% endif %}
        </ul>

        <div class="tabs-content" style="min-height: 29px;"><span class="tabs-back with-left-arrow top-bevel-on-light dark-text-bevel">Back</span>

            <div class="with-padding tab-active" id="tab-1">
                <table class="simple-table responsive-table tables-extras" id="sorting-example2" width="100%">
                    <thead>
                        <tr>
                            <th scope="col" width="18%">{{ 'Month'|trans }}</th>
                            <td scope="col" width="12%" class="hide-on-mobile-portrait with-tooltip"  align="right" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ 'pequiven_seip.headers.totalPlan'|trans }}{{ typeProductionGross|raw }}</td>
                            <td scope="col" width="12%" class="hide-on-tablet with-tooltip"  align="right" title="{{ 'pequiven_seip.totalReal'|trans }}">{{ 'pequiven_seip.headers.totalReal'|trans }}{{ typeProductionGross|raw }}</td>
                            <td scope="col" width="12%" class="hide-on-tablet with-tooltip"  align="right" title="{{ 'pequiven_seip.percentage'|trans }}">{{ 'pequiven_seip.headers.percentage'|trans }}{{ typeProductionGross|raw }}</td>
                            <td scope="col" width="12%" class="hide-on-mobile-portrait with-tooltip"  align="right" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ 'pequiven_seip.headers.totalPlan'|trans }}{{ typeProductionNet|raw }}</td>
                            <td scope="col" width="12%" class="hide-on-tablet with-tooltip" align="right"  title="{{ 'pequiven_seip.totalReal'|trans }}">{{ 'pequiven_seip.headers.totalReal'|trans }}{{ typeProductionNet|raw }}</td>
                            <td scope="col" width="12%" class="hide-on-tablet with-tooltip"  align="right" title="{{ 'pequiven_seip.percentage'|trans }}">{{ 'pequiven_seip.headers.percentage'|trans }}{{ typeProductionNet|raw }}</td>
                            <th scope="col" width="10%">&nbsp;</th>
                        </tr>
                    </thead>
                    {% set colspan = 9 %}
                    <tbody>
                        {% set totalDetails = product_report.getTotalToDay %}
                        {% for productDetailDailyMonth in product_report.getProductDetailDailyMonthsSortByMonth %}
                            {% set tableIdRow = "row-productDetailDailyMonth-"~productDetailDailyMonth.id %}
                            <tr id="{{ tableIdRow }}">
                                <th scope="row">
                                    {{ loop.index }} - 
                                    {{ generateLink(productDetailDailyMonth) }}
                                </th>
                                <td align="right">{{ productDetailDailyMonth.totalGrossPlan|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                                <td align="right">{{ productDetailDailyMonth.totalGrossReal|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                                <td align="right">{{ productDetailDailyMonth.grossPercentage|myNumberFormat }}&nbsp;%</td>
                                <td align="right">{{ productDetailDailyMonth.totalNetPlan|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                                <td align="right">{{ productDetailDailyMonth.totalNetReal|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                                <td align="right">{{ productDetailDailyMonth.netPercentage|myNumberFormat }}&nbsp;%</td>
                                <td class="low-padding align-center">
                                    <p class="button-height">
                                        <span class="button-group">
                                            {% if isAllowPlanningReport %}
                                                <a href="{{ path("pequiven_product_detail_daily_month_update",{id: productDetailDailyMonth.id}) }}" class="button icon-pencil">{{ "pequiven_seip.actions.edit"|trans }}</a>
                                                {% set deleteUrl = path("pequiven_product_detail_daily_month_delete",{id: productDetailDailyMonth.id}) %}
                                                {{ buttons.delete_mini(deleteUrl,message,tableIdRow) }}
                                            {% endif %}
                                        </span>
                                    </p>
                                </td>
                            </tr>
                        {% else %}
                            <tr >
                                <td colspan="{{ colspan }}" class="empty_row">
                                    {{ "empty.product_detail_daily_months"|trans }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr style="font-weight: bold;">
                            <th scope="col">{{ 'Total month before'|trans }}</th>
                            <td scope="col" align="right" class="hide-on-mobile-portrait with-tooltip" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ totalDetails['tp_gross_b']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.totalReal'|trans }}">{{ totalDetails['tr_gross_b']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.percentage'|trans }}">{{ totalDetails['percentage_gross_b']|myNumberFormat }}%</td>
                            <td scope="col" align="right" class="hide-on-mobile-portrait with-tooltip" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ totalDetails['tp_net_b']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.totalReal'|trans }}">{{ totalDetails['tr_net_b']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.percentage'|trans }}">{{ totalDetails['percentage_net_b']|myNumberFormat }}%</td>
                            <th scope="col">&nbsp;</th>
                        </tr>
                        <tr style="font-weight: bold;">
                            <th scope="col">{{ 'Total accumulated'|trans }}</th>
                            <td scope="col" align="right" class="hide-on-mobile-portrait with-tooltip" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ totalDetails['tp_gross']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.totalReal'|trans }}">{{ totalDetails['tr_gross']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.percentage'|trans }}">{{ totalDetails['percentage_gross']|myNumberFormat }}%</td>
                            <td scope="col" align="right" class="hide-on-mobile-portrait with-tooltip" title="{{ 'pequiven_seip.totalPlan'|trans }}">{{ totalDetails['tp_net']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.totalReal'|trans }}">{{ totalDetails['tr_net']|myNumberFormat }}&nbsp;{{ productUnit }}</td>
                            <td scope="col" align="right" class="hide-on-tablet with-tooltip" title="{{ 'pequiven_seip.percentage'|trans }}">{{ totalDetails['percentage_net']|myNumberFormat }}%</td>
                            <th scope="col">&nbsp;</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
